@model IEnumerable<AppRole>

<a class="btn btn-primary" asp-action="Create">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Role</th>
        <th>Kullanıcılar</th>
        <th style="width:125px;"></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">Rol Yok.</td>
        </tr>
    }
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                <form asp-action="Delete" method="post" onsubmit="return confirm('Kaydı silmek istediğinize emin misiniz?')"
                    style="display: inline-block;">
                    <input type="hidden" value="@role.Id" name="id" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>